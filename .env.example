# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_USER_ID=your_discord_user_id_here
DISCORD_GUILD_IDS=guild_id1,guild_id2  # Comma-separated list of server IDs to collect data from

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=ft:gpt-4o-mini-2024-07-18:al43595::BAjDrqTy  # The fine-tuned model ID for your AI clone

# Bot Configuration
RESPONSE_CHANNELS=channel_id1,channel_id2  # Channels where the bot should respond
RESPONSE_PROBABILITY=0.8  # Probability of responding to a message (0.0-1.0)
SUPERVISED_MODE=true  # Set to false to allow automatic responses without approval

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Deployment Configuration
FRONTEND_URL=https://your-vercel-app.vercel.app  # Your Vercel frontend URL
ADDITIONAL_ALLOWED_ORIGINS=https://www.your-domain.com,https://your-domain.com  # Additional allowed origins for CORS
MONGO_URI=mongodb+srv://username:password@your-cluster.mongodb.net/ai-clone  # MongoDB connection string
JWT_SECRET=your_secure_jwt_secret_here  # Secret for JWT token generation

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Pinecone Configuration (for persistent embeddings)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here  # e.g., "us-west4-gcp-free"
